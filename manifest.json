{
  "manifest_version": 3,
  "name": "Price Comparison Tool",
  "version": "1.0.0",
  "description": "A personal Chrome Extension to optimize purchasing decisions on Eaze.com.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.eaze.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.eaze.com/*", "<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}
